#:kivy 1.0
#:import MyToggleButton,MyButtonBorder myButton.MyButtonBorder
#:import MyStackLayout,MyBoxLayout myLayout
#:import GameCarousel gameCarousel.GameCarousel
#:import CustomTitleBar,SystemIcons myLayout

<FrmGzdlauncher>:
    orientation: 'vertical'
    padding: 1
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 42
        TitleIcon:
            id: titleIcon
            size_hint: (None, 1)
            width: 42
        StackLayout:
            id: mainMenu
            padding: (0, 0, 2, 4)
        SystemIcons:
            id: titleIcon
            size_hint: (None, 1)


    BoxLayout:
        id: mainBox
        orientation: 'horizontal'

        MyBoxLayout:
            id: gamePanel
            orientation: 'vertical'
            borders: ['left', 'right', 'bottom']
            GameCarousel:
                id: gameTabs
                do_default_tab: False

    MyStackLayout:
        size_hint: (1, None)
        height: 64
        orientation: 'rl-tb'
        padding: (8, 10, 8, 8)
        borders: ['left', 'right', 'bottom']
        MyButtonBorder:
            size_hint: (None, 1)
            width: 128
            text: 'Run Game'
            on_press: root.btnRun_on_press(self)